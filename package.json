{
  "name": "qodo-acp-adapter",
  "version": "0.1.0",
  "description": "ACP adapter for Qodo Command",
  "main": "dist/index.js",
  "bin": {
    "qodo-acp": "./dist/index.js"
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsx src/index.ts",
    "test": "vitest",
    "test:run": "vitest run",
    "test:coverage": "vitest run --coverage",
    "typecheck": "tsc --noEmit",
    "lint": "eslint . --ext .ts",
    "lint:fix": "eslint . --ext .ts --fix",
    "format": "prettier --write \"src/**/*.ts\"",
    "format:check": "prettier --check \"src/**/*.ts\"",
    "spell": "cspell lint --cache --no-must-find-files .",
    "spell:fix": "cspell lint --cache --no-must-find-files --no-progress --show-suggestions ."
  },
  "dependencies": {
    "@types/node": "^20.0.0",
    "@zed-industries/agent-client-protocol": "^0.1.2",
    "split2": "^4.2.0",
    "uuid": "^13.0.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.35.0",
    "@types/jest": "^30.0.0",
    "@typescript-eslint/eslint-plugin": "^8.43.0",
    "@typescript-eslint/parser": "^8.43.0",
    "cspell": "^9.2.1",
    "eslint": "^9.35.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "jest": "^30.1.3",
    "prettier": "^3.6.2",
    "ts-jest": "^29.4.1",
    "tsx": "^4.0.0",
    "typescript": "^5.0.0",
    "typescript-eslint": "^8.43.0"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
